# ================================
# üè† My Homelab Environment Variables
# ================================
# Copy this file to .env and update the values

# ================================
# Global
# ================================
TZ=Asia/Jakarta

# ================================
# MariaDB
# ================================
MARIADB_ROOT_PASSWORD=your_secure_password
MARIADB_USER=root
MARIADB_PASSWORD=your_secure_password
MARIADB_CPU_LIMIT=1
MARIADB_MEMORY_LIMIT=1G

# ================================
# PostgreSQL
# ================================
POSTGRES_USER=root
POSTGRES_PASSWORD=your_secure_password
POSTGRES_CPU_LIMIT=1
POSTGRES_MEMORY_LIMIT=1G

# ================================
# Redis
# ================================
REDIS_PASSWORD=your_secure_password
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512M

# ================================
# MongoDB
# ================================
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your_secure_password
MONGODB_CPU_LIMIT=1
MONGODB_MEMORY_LIMIT=1G

# ================================
# Portainer
# ================================
PORTAINER_CPU_LIMIT=0.5
PORTAINER_MEMORY_LIMIT=256M

# ================================
# N8N
# ================================
N8N_PORT=5678
N8N_DB_NAME=n8n
N8N_DB_HOST=postgres
N8N_DB_PORT=5432
N8N_DB_USER=root
N8N_DB_PASSWORD=your_secure_password
N8N_CPU_LIMIT=1
N8N_MEMORY_LIMIT=1G

# ================================
# Actual Budget
# ================================
ACTUAL_BUDGET_PORT=5006
ACTUAL_UPLOAD_FILE_SYNC_SIZE_LIMIT=20
ACTUAL_UPLOAD_ENCRYPTED_SIZE_LIMIT=50
ACTUAL_UPLOAD_FILE_SIZE_LIMIT=20
ACTUAL_BUDGET_CPU_LIMIT=0.5
ACTUAL_BUDGET_MEMORY_LIMIT=256M

# ================================
# SerpBear
# ================================
SERPBEAR_PORT=3000
SERPBEAR_USER=admin
SERPBEAR_PASSWORD=your_secure_password
SERPBEAR_SECRET=your_secure_secret
SERPBEAR_APIKEY=your_api_key
NEXT_PUBLIC_APP_URL=http://localhost:3000
SERPBEAR_CPU_LIMIT=0.5
SERPBEAR_MEMORY_LIMIT=512M

# ================================
# ChangeDetection
# ================================
CHANGEDETECTION_PORT=5000
CHANGEDETECTION_BASE_URL=http://localhost:5000
CHANGEDETECTION_PLAYWRIGHT_URL=ws://browser-sockpuppet-chrome:3000
CHANGEDETECTION_FETCH_WORKERS=10
CHANGEDETECTION_CPU_LIMIT=0.5
CHANGEDETECTION_MEMORY_LIMIT=512M

# Sockpuppet Browser (for ChangeDetection)
SOCKPUPPET_SCREEN_WIDTH=1920
SOCKPUPPET_SCREEN_HEIGHT=1024
SOCKPUPPET_SCREEN_DEPTH=16
SOCKPUPPET_MAX_CHROME=10
SOCKPUPPETBROWSER_CPU_LIMIT=1
SOCKPUPPETBROWSER_MEMORY_LIMIT=1G

# ================================
# Wallos
# ================================
WALLOS_PORT=8282
WALLOS_CPU_LIMIT=0.5
WALLOS_MEMORY_LIMIT=256M

# ================================
# Stirling PDF
# ================================
STIRLING_PDF_PORT=8088
STIRLING_PDF_SECURITY_ENABLELOGIN=true
STIRLING_PDF_LANGS=en_US
STIRLING_PDF_CPU_LIMIT=1
STIRLING_PDF_MEMORY_LIMIT=512M
